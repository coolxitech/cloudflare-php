{
  "name": "coolxitech/cloudflare-sdk",
  "description": "PHP binding for v4 of the Cloudflare Client API.",
  "type": "library",
  "require": {
    "guzzlehttp/guzzle": "^7.9",
    "php": ">=8.0",
    "psr/http-message": "~1.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4",
    "phpmd/phpmd" : "@stable",
    "friendsofphp/php-cs-fixer": "^3.64.0"
  },
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Junade Ali",
      "email": "junade@cloudflare.com"
    },
    {
      "name": "CoolXiTech",
      "email": "admin@kuxi.tech"
    }
  ],
  "autoload": {
    "psr-4": {
      "Cloudflare\\API\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
        "tests/"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "repositories": [
    {
      "description": "阿里云镜像",
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer/",
      "canonical": false
    }
  ]
}
